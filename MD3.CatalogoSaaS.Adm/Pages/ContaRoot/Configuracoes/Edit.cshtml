@page
@model MD3.CatalogoSaaS.Adm.Pages.ContaRoot.Configuracoes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ConfiguracaoDeConta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfiguracaoDeConta.Conta_Id" class="control-label"></label>
                <input hidden asp-for="ConfiguracaoDeConta.Conta_Id" value="@ViewBag.contaId" />
                <span class="form-control">@ViewBag.Conta</span>
            </div>
            <div class="form-group">
                <label asp-for="ConfiguracaoDeConta.Parametro_Id" class="control-label"></label>
                <select asp-for="ConfiguracaoDeConta.Parametro_Id" class="form-control" asp-items="ViewBag.Parametro_Id"></select>
                <span asp-validation-for="ConfiguracaoDeConta.Parametro_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfiguracaoDeConta.Valor" class="control-label"></label>
                <input asp-for="ConfiguracaoDeConta.Valor" class="form-control" />
                <span asp-validation-for="ConfiguracaoDeConta.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-contaId="@ViewBag.contaId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
