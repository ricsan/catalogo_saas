@page
@model MD3.CatalogoSaaS.Adm.Pages.SistemaRoot.Planos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit - Plano</h1>

<h4>PlanoDoSistema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanoDoSistema.Id" />
            <div class="form-group">
                <label asp-for="PlanoDoSistema.Sistema_Id" class="control-label"></label>
                @*<select asp-for="PlanoDoSistema.Sistema_Id" class="form-control" asp-items="ViewBag.Sistema_Id"></select>*@
                <input hidden asp-for="PlanoDoSistema.Sistema_Id" value="@ViewBag.sistemaId" />
                <span class="form-control">@ViewBag.Sistema</span>
                <span asp-validation-for="PlanoDoSistema.Sistema_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoDoSistema.Nome" class="control-label"></label>
                <input asp-for="PlanoDoSistema.Nome" class="form-control" />
                <span asp-validation-for="PlanoDoSistema.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanoDoSistema.Descricao" class="control-label"></label>
                <input asp-for="PlanoDoSistema.Descricao" class="form-control" />
                <span asp-validation-for="PlanoDoSistema.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PlanoDoSistema.Ativo" /> @Html.DisplayNameFor(model => model.PlanoDoSistema.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-sistemaId="@ViewBag.sistemaId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
