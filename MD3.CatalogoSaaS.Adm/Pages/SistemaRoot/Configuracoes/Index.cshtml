@page
@model MD3.CatalogoSaaS.Adm.Pages.SistemaRoot.Configuracoes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Configurações do sistema</h1>

<p>
    <a asp-page="Create" asp-route-sistemaId="@ViewBag.sistemaId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConfiguracaoDeSistema[0].Sistema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfiguracaoDeSistema[0].Parametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfiguracaoDeSistema[0].Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ConfiguracaoDeSistema)
        {
            <tr>
                <td>
                    @($"{item.Sistema.Nome} ({item.Sistema.CodigoInterno})")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parametro.CodigoUnico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-parametroId="@item.Parametro_Id" asp-route-sistemaId="@ViewBag.sistemaId">Edit</a> |
                    <a asp-page="./Details" asp-route-parametroId="@item.Parametro_Id" asp-route-sistemaId="@ViewBag.sistemaId">Details</a> |
                    <a asp-page="./Delete" asp-route-parametroId="@item.Parametro_Id" asp-route-sistemaId="@ViewBag.sistemaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
